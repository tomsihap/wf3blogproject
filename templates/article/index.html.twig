{% extends "base.html.twig" %}

{% block body %}

<a href="{{ path('article_create') }}" class="btn btn-primary">Créer un article</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>#</th>
            <th>Titre</th>
            <th>Résumé</th>
            <th>Date de création</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.shortContent }}</td>
                <td>{{ article.createdAt | date("d/m/Y H:i", "Europe/Paris") }}</td>
                <td>
                    <a href="{{ path('article_show', { 'article' : article.id }) }}">
                        <i class="fa fa-search"></i>
                    </a>

                    <a href="{{ path('article_edit', { 'article' : article.id }) }}">
                        <i class="fa fa-pencil"></i>
                    </a>

                    <form action="{{ path('article_delete', { 'article' : article.id }) }}" method="post">
                        <button class="btn btn-outline-danger btn-sm"><i class="fa fa-trash"></i></button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        
    </tbody>
</table>

{% endblock %}